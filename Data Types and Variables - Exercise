package DataTypesandVariablesExercise;

import java.util.Scanner;

public class e6TriplesofLatinLetters {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int n = Integer.parseInt(scanner.nextLine());
        //Напишете програма за четене на цяло число n и отпечатване на всички
        // тройки от първите n малки латински букви, подредени по азбучен ред:
        for (char i = 97; i < 97 + n ; i++) {
            for (char j = 97; j < 97 + n; j++) {
                for (char k = 97; k < 97 + n ; k++) {
                    System.out.printf("%c%c%c%n ",i,j,k);

                }

            }
            
        }
    }
}
